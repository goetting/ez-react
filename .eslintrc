{
  'extends': ['airbnb', 'plugin:flowtype/recommended'],
  'rules': {
    'no-param-reassign': 0,
    'no-plusplus': 0,
    'import/no-extraneous-dependencies': 0,
    'valid-typeof': 0,
    'max-len': ['error', 100, 2, {
      ignoreUrls: true,
      ignoreComments: true,
      ignoreRegExpLiterals: true,
      ignoreStrings: true,
      ignoreTemplateLiterals: true
    }],
  },
  'parser': 'babel-eslint',
  'globals': {
    'expect': true,
    'describe': true,
    'it': true,
  },
  'plugins': [
    'flowtype',
  ],
}